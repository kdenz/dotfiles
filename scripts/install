#!/usr/bin/env bash

echo "Installing dotfiles..."
echo
dotfiles_dir=`pwd`
cd "$dotfile_dir"
git pull origin master
echo

function install {

  # Bash
  ln -sf "$dotfiles_dir/.bashrc" ~/.bashrc

  # ZSH
  ln -sf "$dotfiles_dir/.zshrc" ~/.zshrc
  ln -sf "$dotfiles_dir/.oh-my-zsh/plugins" "$ZSH/custom/plugins"
  # Patched font for theme
  fonts/install.sh
  # Removing the default empty folder
  rm -r "$ZSH/custom/plugins"
  ln -sf "$dotfiles_dir/oh-my-zsh/plugins"  "$ZSH/custom"


  # Tmux
  ln -sf "$dotfiles_dir/.tmux.conf" ~/.tmux.conf

  # Vim
  ln -sf "$dotfiles_dir/.vim/.vimrc" ~/.vimrc
  ln -sf "$dotfiles_dir/.vim" ~/.vim

  source ~/.bash_profile

  echo "Installation completed. Enjoy!"
}

if [ "$1" == "--force" -o "$1" == "-f" ]; then
  install
else
  read -p "This will overwrite the existing dotfiles. Are you sure? (y/n) " -n 1
  echo
  if [[ $REPLY =~ ^[Yy]$ ]]; then
    install
  fi
fi

